<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repeat_dialog_header"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/repeat"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toBottomOf="@id/repeat_dialog_header" />

    <TextView
        android:id="@+id/repeat_dialog_once"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:gravity="center|left"
        android:paddingLeft="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="Only ring once"
        android:textColor="@color/materialBlack"
        app:layout_constraintTop_toBottomOf="@id/repeat_dialog_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toBottomOf="@id/repeat_dialog_once" />

    <TextView
        android:id="@+id/repeat_dialog_everyday"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:gravity="center|left"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:paddingLeft="12dp"
        android:text="@string/everyday"
        android:textColor="@color/materialBlack"
        app:layout_constraintTop_toBottomOf="@id/repeat_dialog_once"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
</android.support.constraint.ConstraintLayout>